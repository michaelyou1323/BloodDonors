<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginStart="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5ssp"
        android:elevation="@dimen/_20ssp"
        app:cardCornerRadius="@dimen/_20ssp">

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_3ssp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4ssp"
                android:layout_marginTop="@dimen/_12ssp"
                android:fontFamily="cursive"
                android:text="User name "
                android:textSize="@dimen/_23ssp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:fontFamily="cursive"
                android:text="Phone number : "
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tvBloodGroup"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:fontFamily="cursive"
                android:text="Blood Group : "
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bCallDonor"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_25ssp"
            android:backgroundTint="#8A8181"
            android:fontFamily="cursive"
            android:text="Call"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/_10sdp">


        </com.google.android.material.button.MaterialButton>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
